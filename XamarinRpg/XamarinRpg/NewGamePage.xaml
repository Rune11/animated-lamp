<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinRpg.NewGamePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="This is the new game page!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="NameEntry" Text="Name"></Entry>
            
            <Button x:Name="StartBtn" Text="Start" Clicked="StartBtn_Clicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>